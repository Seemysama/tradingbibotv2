# ============================================
# Trading Bot Configuration - Production Grade
# ============================================

# === MODE DE FONCTIONNEMENT ===
# LIVE = Trading réel avec WebSocket
# PAPER = Simulation avec données historiques + timestamps réels
# BACKTEST = Backtest rapide sans délais
MODE=PAPER

# Environnement (pour logging/monitoring)
ENV=DEV
LOGGER_LEVEL=INFO

# === EXCHANGE ===
EXCHANGE=binance
USE_SANDBOX=true

# === TRADING ===
PAIRS=["BTC/USDT"]
TIMEFRAME=1m
INITIAL_BALANCE=10000.0

# === FEED CONFIGURATION ===
WARMUP_CANDLES=500
REPLAY_SPEED_MS=50

# === MACHINE LEARNING ===
ML_ENABLED=true
ML_MODEL_TYPE=lstm_attention  # lstm | lstm_attention | gru
ML_CONFIDENCE_THRESHOLD=0.65
ML_SEQ_LENGTH=60
DEBUG_SIGNALS=false

# === GESTION DES RISQUES ===
MAX_DRAWDOWN=0.1
MAX_EXPOSURE=0.5
LEVERAGE=3
COOLDOWN_SEC=30
SPREAD_LIMIT=0.002
MIN_NOTIONAL=5.0
POSITION_SIZE_PCT=0.05
STOP_LOSS_PCT=0.01
TAKE_PROFIT_PCT=0.02

# === INDICATEURS TECHNIQUES ===
SMA_TREND_WINDOW=200
SMA_FAST_WINDOW=50
BB_WINDOW=20
BB_STD=2.0
RSI_WINDOW=14
ATR_WINDOW=14
ADX_WINDOW=14

# === QUESTDB (Optionnel) ===
QUESTDB_ENABLED=false
QUESTDB_HOST=localhost
QUESTDB_PORT=9009

# === API SERVER ===
API_HOST=0.0.0.0
API_PORT=8000

# === BINANCE API (requis pour mode LIVE uniquement) ===
# BINANCE_API_KEY=votre_cle_api
# BINANCE_API_SECRET=votre_secret_api

# === DATA ===
# TIMEFRAME=1m
# PAIRS=BTC/USDT,ETH/USDT,SOL/USDT
